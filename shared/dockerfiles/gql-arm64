FROM --platform=linux/arm64 rust:alpine3.23 as builder
RUN rustup target add aarch64-unknown-linux-musl
WORKDIR /usr/local/app/
COPY rust/gql/ ./
RUN cargo build --release --target=aarch64-unknown-linux-musl

FROM --platform=linux/arm64 alpine:3.23 as gql-alpine
COPY --from=builder /usr/local/app/target/aarch64-unknown-linux-musl/release/gql /bin/gql
CMD ["/bin/gql"]

FROM --platform=linux/arm64 scratch as gql-scratch
COPY --from=builder /usr/local/app/target/aarch64-unknown-linux-musl/release/gql /gql
CMD ["/gql"]
