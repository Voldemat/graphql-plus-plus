FROM rust:alpine3.23 as builder
WORKDIR /usr/local/app/
COPY rust/gql/ ./
RUN cargo build --release

FROM alpine:3.23 as gql-alpine
COPY --from=builder /usr/local/app/target/release/gql /bin/gql
CMD ["/bin/gql"]

FROM scratch as gql-scratch
COPY --from=builder /usr/local/app/target/release/gql /gql
CMD ["/gql"]
