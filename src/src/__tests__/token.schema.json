{
    "$id": "token.schema.json",
    "title": "Token",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "Token": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "EQUAL",
                        "LEFT_PAREN",
                        "RIGHT_PAREN",
                        "LEFT_BRACE",
                        "RIGHT_BRACE",
                        "BANG",
                        "IDENTIFIER",
                        "STRING",
                        "NUMBER",
                        "SEMICOLON",
                        "COLON"
                    ]
                },
                "lexeme": {
                    "type": "string"
                },
                "location": {
                    "type": "object",
                    "properties": {
                        "start": {
                            "type": "number",
                            "minimum": 0
                        },
                        "end": {
                            "type": "number",
                            "minimum": 0
                        },
                        "line": {
                            "type": "number",
                            "minimum": 1
                        }
                    },
                    "required": ["start", "end", "line"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "lexeme", "location"]
        }
    }
}
